@{
    ViewData["Title"] = "DoubleRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identities.Any(i => i.IsAuthenticated))
{
    <h1>
        欢迎登录 @User.Identities.First(i => i.IsAuthenticated).FindFirst(ClaimTypes.Name).Value
